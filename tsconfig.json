{
    "compilerOptions": {
      "target": "es6",                         
      "module": "commonjs",                    
      "lib": ["esnext", "dom"],
      "sourceMap": true,
      "rootDir": "./src",                  
      "outDir": "./dist",
      "strict": true,                          
      "moduleResolution": "node",            
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],                      
      "esModuleInterop": true,                  
      "experimentalDecorators": true,        
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true        
    }, 
    "exclude": [
      "node_modules", "dist", "contracts"
    ]
  }